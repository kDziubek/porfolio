<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorWebsiteTab</item>
        <item name="colorPrimaryDark">@color/mprimarydark</item>
        <item name="colorAccent">@color/grey50</item>
        <item name="android:colorForeground">@color/grey100</item>
        <item name="android:textColorPrimary">@color/grey700</item>
    </style>
    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MyCustomLayoutStyle" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
